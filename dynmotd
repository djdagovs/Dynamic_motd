#!/bin/bash
 
PROCCOUNT=`ps -Afl | wc -l`
PROCCOUNT=`expr $PROCCOUNT - 5`
GROUPZ=`groups`
 
echo -e "\033[1;32m 
__   _____  _   _   ____    _    _   _ _   _ _____ ____    _   _ _____ ____  _____ 
\ \ / / _ \| | | | | __ )  / \  | \ | | \ | | ____|  _ \  | | | | ____|  _ \| ____|
 \ V / | | | | | | |  _ \ / _ \ |  \| |  \| |  _| | |_) | | |_| |  _| | |_) |  _|  
  | || |_| | |_| | | |_) / ___ \| |\  | |\  | |___|  _ <  |  _  | |___|  _ <| |___ 
  |_| \___/ \___/  |____/_/   \_\_| \_|_| \_|_____|_| \_\ |_| |_|_____|_| \_\_____| Powered By Figlet

\033[0;35m=================: \033[0;37mSystem Data\033[0;35m :=========================
=  \033[0;37mHostname \033[0;35m= \033[1;32m`hostname`
\033[0;35m=   \033[0;37mAddress \033[0;35m= \033[1;32mYour IP here
\033[0;35m=    \033[0;37mKernel \033[0;35m= \033[1;32m`uname -r`
\033[0;35m=    \033[0;37mUptime \033[0;35m= \033[1;32m`uptime | awk {'print $3" "$4" "$1" "$2'}`
\033[0;35m=       \033[0;37mCPU \033[0;35m= \033[1;32mYour CPU Information here
\033[0;35m=    \033[0;37mMemory \033[0;35m= \033[1;32m`cat /proc/meminfo | grep MemTotal | awk {'print $2'}` kB
\033[0;35m==================: \033[0;37mUser Data\033[0;35m :==========================
=  \033[0;37mUsername \033[0;35m= \033[1;32m`whoami`
\033[0;35m=  \033[0;37mSessions \033[0;35m= \033[1;32m`who | grep $USER | wc -l`
\033[0;35m= \033[0;37mProcesses \033[0;35m= \033[1;32m$PROCCOUNT
\033[0;35m=============: \033[0;37mHelpful Information\033[0;35m :=====================
=    \033[0;37m Admin \033[0;35m= \033[1;32mYour Information here
\033[0;35m=============: \033[0;37mService Information\033[0;35m :=====================
\033[0;36m`cat /etc/serverinfo`
\033[0;35m=========================================================\E[m
"
